@import "./_common"

.menu 
	position absolute
	top 0
	right 10px
	z-index 15
	
	+mobile()
		height 100%

.menu__btn
	visibility hidden
	position absolute
	display block
	top 5px
	left -53px
	width 48px
	height 48px
	border none
	background-color transparent !important
	
	+mobile()
		visibility visible
	
	.l
		position: absolute
		top: 50%
		left: 50%
		width: 32px
		height: 4px
		margin-top: -2px
		margin-left: -16px
		border-radius 2px
		background-color: #d1d8db
		transition transform .5s custom-bezier
		
	.l1
		transform translate(0, -9px)
		+status(menu)
			transform translate(0, 0) rotate(-135deg)
			
	.l2
		+status(menu)
			transform scale(0.4, 0)
	
	.l3
		transform: translate(0, 9px)
		+status(menu)
			transform: translate(0, 0) rotate(135deg)


.menu__lists
	
	+mobile()
		width 0
		height 100%
		overflow hidden
		background #2a2f33
		transition width 0.3s custom-bezier
		
		+status(menu)
			width 90px
		
	li 
		float: right
		margin-right: 13px
		line-height: 70px
		font-size: 14px
		
		+mobile()
			float: none
			width: 90px
			text-align: center


	.menu__help 
		padding-left: 7px
		padding-right: 7px
	
.layer--menu-darken
	visibility hidden

