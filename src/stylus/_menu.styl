@import "./_common"

.menu 
	position absolute
	top 0
	right 20px
	z-index 15

	+status(menu)
		// width 90px
		transform translateX(0)
	
	+mobile()
		width 90px
		right 0
		height 100%
		transform translateX(100%)
		transition transform 0.3s custom-bezier
	

.menu__btn
	visibility hidden
	position absolute
	display block
	top 5px
	left -53px
	width 48px
	height 48px
	border none
	background-color transparent !important
	cursor pointer
	
	+mobile()
		visibility visible
		
		
	
	.l
		position: absolute
		top: 50%
		left: 50%
		width: 32px
		height: 4px
		margin-top: -2px
		margin-left: -16px
		border-radius 2px
		background-color: c-text
		transition transform .5s custom-bezier
		
	.l1
		transform translate(0, -9px)
		+status(menu)
			transform translate(0, 0) rotate(-135deg)
			
	.l2
		+status(menu)
			transform scale(0.4, 0)
	
	.l3
		transform: translate(0, 9px)
		+status(menu)
			transform: translate(0, 0) rotate(135deg)


.menu__lists
	
	display flex
	
	
	+mobile()
		width 90px
		height 100%
		overflow hidden
		flex-direction column
		
		background-color c-black
		
		
		
	li 
		// float: right
		margin-left: 13px
		line-height: 70px
		font-size: 14px
		
		+mobile()
			margin 0
			width: 90px
			height 60px
			line-height 60px
			text-align: center

	.menu__clear,
	.menu__help 
		padding-left: 7px
		padding-right: 7px
	

.layer--menu-darken 
	z-index 10
	visibility hidden
	opacity 0
	transition opacity 0.2s ease, visibility 0s linear 0.5s
	
	+status(menu)
		visibility visible
		opacity 1
		transition opacity 0.2s ease, visibility 0s linear 0s
	