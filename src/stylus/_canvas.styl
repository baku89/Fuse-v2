.canvas
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	cursor crosshair !important

#canvas 
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	transform-origin bottom left
	transform translateY(-100%) scaleY(-1)
	
	+portrait()
		left 100%
		transform translateY(-100%) scaleY(-1) rotate(-90deg)
		// transform none
			
		// transform translate(100%, -100%) scaleY(-1) rotate(-90deg)
		
	
	&.is-hidden
		visibility hidden
		

//--------------------------------------------------
// paused

.canvas__paused
	position absolute
	top 50%
	left 50%
	font-size 16px
	width 180px
	height 32px
	margin -16px 0 0 -90px
	line-height 32px
	background-color rgba(c-black, 0.6)
	text-align center
	visibility hidden
		
	+status('paused')
		visibility visible
		
		&:hover
			background-color rgba(c-text, 0.4)
			cursor pointer !important