@import "./_common"


.alert 
	position: absolute
	top: 50%
	left: 50%
	width: 380px
	height: 0px
	margin: 100px 0 0 -190px
	overflow: hidden
	transition: height 0.5s custom-bezier

	&.show
		height: 120px

	+mobile()
		width: 300px
		margin: -60px 0 0 -150px


.alert__content 
	background-color c-black
	height: 75px
	margin-bottom 2px
	
.alert__choices
	position relative
	display flex
	height: 45px

	&:after 
		content: ""
		display: table
		clear: both

.alert__btn 
	display: block
	flex-grow 1
	height: 100%
	background-color c-black
	font-size: 16px
	color: c-text
	margin-right 2px
	cursor pointer

	&:last-child 
		margin 0
		

//-----------------------------------
// failed

.alert--failed__content
	text-align: center
	line-height: 75px

//-----------------------------------
// succeed

.alert--succeed__content
	display flex
	align-items center

.alert__share-url
	flex-grow 2
	margin-left 20px
	
	
.alert__tweet
	flex-basis 40px	
	margin-left 20px
	margin-right 20px

.alert__tweet-link
	font-size 14px


