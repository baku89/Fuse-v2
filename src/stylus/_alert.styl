@import "./_common"

.alert 
	position: absolute
	top: 50%
	left: 50%
	width: 380px
	height: 0px
	margin: 100px 0 0 -190px
	background-color: #2a2f33
	overflow: hidden
	transition: height 0.5s custom-bezier

	&.show
		height: 120px

	+mobile()
		width: 300px
		margin: -60px 0 0 -150px


.alert__content 
	height: 75px
	border-bottom: 2px solid #474d52

.alert__choises 
	position: relative
	height: 45px
	*zoom: 1

	&:after 
		content: ""
		display: table
		clear: both

.alert__btn 
	display: block
	float: left
	width: 50%
	height: 100%
	background-color: transparent
	font-size: 18px
	color: c-text
	border-right: 2px solid #474d52

	&:last-child 
		border: 0

.layer--share[status=complete] .alert__wrapper--complete 
	display: block

.alert--complete__url-wrapper 
	position: absolute
	top: 20px
	right: 70px
	left: 20px

.alert--complete__url 
	width: 100%

.alert--complete__tweet 
	position: absolute
	top: 22px
	right: 15px
	font-size: 14px

.layer--share[status=failed] .alert__wrapper--failed 
	display: block

.alert__wrapper--failed .alert__content 
	text-align: center
	line-height: 75px

.alert__wrapper--failed .alert__btn 
	width: 100%

.layer--gallery 
	overflow: scroll
	-webkit-overflow-scrolling: touch

.layer--gallery__list 
	width: 960px
	max-width: 100%
	min-height: 100%
	margin: 0 auto
	padding: 80px 0
	*zoom: 1
		
	+mobile()
		padding: 20px 0
		text-align: center

	&:after 
		content: ""
		display: table
		clear: both

	li 
		position: relative
		float: left
		width: 244px
		height: 164px
		border: 2px solid #575e63
		margin: 38px
		cursor: pointer
		transition: border-color 0.2s ease
		
		+mobile()
			display: inline-block
			margin: 23px
			float: none

		&:before 
			content: attr(data-id)
			position: absolute
			bottom: 0
			right: 8px

		&:hover 
			border-color: c-text

	img 
		width: 100%
		height: 100%