@import "./stylus/_common.styl"


global-reset()

//--------------------------------------------------

*, ::after, ::before
	box-sizing: border-box

html, body
	width 100%
	height 100%
	overflow hidden

body
	background-color: #474d52
	color: c-text
	font-family: 'Ubuntu', sans-serif
	font-size: 18px
	line-height: 1.8
	user-select: none
	
	&:after
		display none
		content "pc"
	
		+mobile()
			content "mobile"


button
	border 0
	font-family 'Ubuntu', sans-serif
	outline 0
	cursor pointer

a
	border-bottom 2px dotted c-text
	cursor pointer
	color c-text !important
	text-decoration none !important

	&:hover
		background: rgba(255, 255, 255, 0.5)

p
	text-align: justify

input[type=text]
	border 0
	outline 0
	font-size 14px
	height 35px
	padding 0 5px
	background-color #363c3f
	font-family 'Ubuntu', sans-serif
	line-height 35px
	colo c-text


.is-hidden
	visibilit hidden

.loading 
	widt 43px
	height 11px
	background-image url(../img/loading2.gif)
	background-repeat no-repeat

span.fuse 
	color: #d5d7bf

span.bomb 
	color: #dad95c

span.fire 
	color: #f52661

span.wall 
	color: #516076

span.ersr 
	color: #7B848C

.page-wrapper 
	min-width: 960px
	min-height: 720px

	body[data-status=unsupported] &
		display: none

#canvas 
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	margin: auto
	width: 100%
	height: 100%
	transform-origin 50% 50%
	transform scaleY(-1.0)

.canvas--loading 
	visibility: hidden
	position: absolute
	top: 50%
	left: 50%
	z-index: 5

body[data-status=loading] .canvas--loading 
	visibility: visible

.layer 
	position: absolute
	top: 0%
	left: 0%
	width: 100%
	height: 100%
	background-color: rgba(42, 47, 51, 0.8)
	z-index: 20

@import "stylus/_brush"
@import "stylus/_menu"
@import "stylus/_layer"
@import "stylus/_alert"



.layer--gallery__loading 
	visibility: hidden
	margin: 0 auto 80px
	line-height: 11px
	text-align: center

	.layer--gallery[data-status=nomore] &
		visibility: visible
		background: none

	.layer--gallery[data-status=nomore] &:before 
		content: '- - -'

	.layer--gallery[data-status=loading] &
		visibility: visible

.unsupported 
	display: none
	width: 320px
	margin: 0 auto
	padding-top: 100px

	body[data-status=unsupported] &
		display: block

	img 
		width: 320px
		margin: 0 auto 10px

	h3 
		font-size: 20px
		text-align: center
		margin-bottom: 10px

	p 
		font-size: 14px
		text-align: center
		margin-bottom: 10px
