@import "./stylus/_common.styl"


global-reset()

//--------------------------------------------------

*, ::after, ::before
	box-sizing: border-box

html, body
	width 100%
	height 100%
	overflow hidden
	position: fixed


body
	background-color: c-black
	color: c-text
	font-family: 'Ubuntu', sans-serif
	font-size: 18px
	line-height: 1.8
	user-select: none
	top 0
	
	&:after
		display none
		content "pc"
	
		+mobile()
			content "mobile"


button
	border 0
	font-family 'Ubuntu', sans-serif
	outline 0
	cursor pointer

a
	border-bottom 2px dotted c-text
	cursor pointer
	color c-text !important
	text-decoration none !important

	&:hover
		background: rgba(255, 255, 255, 0.5)

p
	text-align: justify

input[type=text]
	border 0
	outline 0
	font-size 14px
	height 35px
	padding 0 5px
	background-color #333
	font-family 'Ubuntu', sans-serif
	line-height 35px
	color c-text


.is-hidden
	visibility hidden

[v-cloak]
	visibility hidden

.loading
	position absolute
	top 50%
	left 50%
	visibility hidden
	width 80px
	height 48px
	margin-top -24px
	margin-left -40px
	background-image url(../img/loading.gif)
	background-repeat no-repeat
	background-size 100% 100%

	
	+status('loading')
		visibility visible
		
	+status('posting')
		visibility visible

.app
	// min-width: 960px
	// min-height: 720px
	width 100%
	height 100%

@import "stylus/_canvas"
@import "stylus/_layer"
@import "stylus/_brush"
@import "stylus/_menu"
@import "stylus/_alert"

@import "stylus/_gallery"


.error
	width 100%
	height 100%
	overflow scroll
	display flex
	flex-direction column
	justify-content center
	-webkit-overflow-scrolling touch
	

	img 
		width: 100%
		height auto
		margin: 0 auto 10px

	h3 
		font-size: 20px
		text-align: center
		margin-bottom: 10px

	p 
		font-size: 14px
		text-align: center
		margin-bottom: 10px
		
.error__wrapper
	width 320px
	margin 0 auto
